{
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 8 * * *"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ]
}